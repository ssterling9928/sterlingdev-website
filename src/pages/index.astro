---

import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';// Import Astro's image component for optimized image handling

import PortraitImage from '../assets/images/portrait.png'; // Import your portrait imag


---

<Layout title="Stephen Sterling - Portfolio">
	    <!-- Hero Section -->
    <section class="min-h-screen flex items-center justify-center text-center py-20 px-6 relative overflow-hidden bg-zinc-900">
        <div class="absolute inset-0 hero-pattern opacity-10"></div>
        <div class="absolute inset-0 bg-gradient-to-br from-gray-900/0 to-orange-900/10"></div> <!-- Subtle overlay gradient -->

        <div class="container mx-auto flex flex-col md:flex-row items-center justify-center gap-16 relative z-10">
            <!-- Text Content -->
            <div class="max-w-2xl md:text-left text-center">
                <p class="text-xl md:text-2xl text-orange-400 mb-3 font-medium">Hello, I'm</p>
                <h1 class="text-5xl md:text-6xl lg:text-7xl font-extrabold text-white mb-6 leading-tight">
                    <span class="gradient-text-orange">Stephen Sterling</span>
                </h1>
                <p class="text-2xl md:text-3xl text-gray-300 mb-8 font-light">
                    A <span class="font-semibold text-orange-300">Full-Stack Developer</span> Creating a diversified array[ ] of &#123;software solutions&#125;.
                </p>
                <!-- Call to Action Button -->
                <a href="#projects" class="cta-button inline-block bg-orange-600 hover:bg-orange-700 text-white font-bold py-3 px-8 rounded-full shadow-lg text-xl transition-all duration-300 ease-in-out">
                    View My Work &rarr;
                </a>
            </div>
            <!-- Developer Avatar/Illustration (Placeholder) -->
            <div class="flex-shrink-0 relative">
                <!-- Outer glow/pulse effect - can be animated with custom CSS later -->
                <div class="absolute inset-0 rounded-full bg-gradient-to-br from-orange-400/30 to-purple-500/30 blur-xl opacity-75 animate-pulse-slow"></div>
                <Image 
                    src={PortraitImage}
                    alt={"Stephen Sterling's Portrait"} 
                    width="1920" height="1080"
                    class='relative rounded-full shadow-2xl border-4 border-orange-500 object-cover md:w-80 md:h-80 lg:w-96 lg:h-96 transform rotate-6 hover:rotate-0 transition-transform duration-500 ease-in-out' />
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-20 px-6 bg-gray-900 rounded-3xl shadow-2xl my-16 mx-auto container">
        <div class="text-center">
            <h2 class="text-4xl font-bold gradient-text-orange mb-8">About Me</h2>
            <p class="text-lg md:text-xl text-gray-300 max-w-4xl mx-auto mb-6">
                I'm a passionate software developer with [X] years of experience, specializing in building robust and scalable web applications. My expertise spans both front-end and back-end technologies, allowing me to tackle complex challenges across the entire stack.
            </p>
            <p class="text-lg md:text-xl text-gray-300 max-w-4xl mx-auto">
                My journey in development is driven by a curiosity for how things work and a dedication to creating impactful solutions. I thrive on clean code, continuous learning, and collaborative environments that foster innovation.
            </p>
        </div>
    </section>

    <!-- Skills Section -->
    <section id="skills" class="py-20 px-6 bg-gray-950 rounded-3xl shadow-2xl my-16 mx-auto container">
        <div class="text-center">
            <h2 class="text-4xl font-bold gradient-text-orange mb-12">My Core Skills & Technologies</h2>
            <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-8">
                <!-- Skill Card: Frontend -->
                <div class="skill-card bg-gray-800 p-6 rounded-xl shadow-lg border border-gray-700 text-center flex flex-col items-center">
                    <svg class="w-16 h-16 text-orange-400 mb-4" fill="currentColor" viewBox="0 0 24 24"><path d="M4 2h16c1.1 0 2 .9 2 2v16c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2zm13 8H7c-.55 0-1-.45-1-1s.45-1 1-1h10c.55 0 1 .45 1 1s-.45 1-1 1z"></path></svg>
                    <p class="text-lg font-semibold text-gray-100">Frontend Dev</p>
                </div>
                <!-- Skill Card: Backend -->
                <div class="skill-card bg-gray-800 p-6 rounded-xl shadow-lg border border-gray-700 text-center flex flex-col items-center">
                    <svg class="w-16 h-16 text-orange-400 mb-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93h2c0 3.31 2.69 6 6 6v2.07zm4.88-1.46L13.84 16h-1.69l-1.07 1.07-1.12-1.12 1.4-1.4c.05-.05.1-.09.15-.14l2.13-2.13.01-.01c.2-.2.43-.37.69-.5L17.72 12l.14-.14c.09-.09.14-.2.14-.34V8c0-.55-.45-1-1-1h-2V6c0-1.1-.9-2-2-2s-2 .9-2 2v1h-2v1.5c0-.55-.45-1-1-1H7v2h3v1.5c0 .55.45 1 1 1h2v1.5c0 .55.45 1 1 1h2z"></path></svg>
                    <p class="text-lg font-semibold text-gray-100">Backend Dev</p>
                </div>
                <!-- Skill Card: Databases -->
                <div class="skill-card bg-gray-800 p-6 rounded-xl shadow-lg border border-gray-700 text-center flex flex-col items-center">
                    <svg class="w-16 h-16 text-orange-400 mb-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-.75-7.75l-4.5 4.5 1.41 1.41L12 13.91l6.09-6.09-1.41-1.41z"></path></svg>
                    <p class="text-lg font-semibold text-gray-100">Databases</p>
                </div>
                <!-- Skill Card: Cloud -->
                <div class="skill-card bg-gray-800 p-6 rounded-xl shadow-lg border border-gray-700 text-center flex flex-col items-center">
                    <svg class="w-16 h-16 text-orange-400 mb-4" fill="currentColor" viewBox="0 0 24 24"><path d="M19.35 10.04C18.67 6.59 15.64 4 12 4c-3.72 0-6.84 2.53-7.7 6.09C2.06 10.74 1 12.35 1 14c0 3.31 2.69 6 6 6h12c3.31 0 6-2.69 6-6 0-2.63-2.02-4.91-4.65-5.96zM17 16H7v-2h10v2z"></path></svg>
                    <p class="text-lg font-semibold text-gray-100">Cloud Platforms</p>
                </div>
                <!-- Skill Card: Git/DevOps -->
                <div class="skill-card bg-gray-800 p-6 rounded-xl shadow-lg border border-gray-700 text-center flex flex-col items-center">
                    <svg class="w-16 h-16 text-orange-400 mb-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12c0 4.42 2.86 8.18 6.84 9.5.5.09.68-.22.68-.48 0-.24-.01-1.03-.01-1.7c-2.78.6-3.37-1.34-3.37-1.34-.45-1.16-1.1-1.47-1.1-1.47-.9-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.89 1.53 2.34 1.09 2.9.83.09-.64.35-1.08.64-1.33-2.22-.25-4.55-1.11-4.55-4.94 0-1.09.39-1.98 1.03-2.68-.1-.25-.45-1.27.1-2.64 0 0 .84-.27 2.75 1.02.79-.22 1.63-.33 2.47-.33.84 0 1.68.11 2.47.33 1.91-1.29 2.75-1.02 2.75-1.02.55 1.37.2 2.39.1 2.64.64.7 1.03 1.59 1.03 2.68 0 3.84-2.34 4.68-4.57 4.93.36.3.67.92.67 1.85 0 1.34-.01 2.42-.01 2.75 0 .26.18.57.68.47C20.14 20.21 23 16.46 23 12c0-5.52-4.48-10-10-10z"></path></svg>
                    <p class="text-lg font-semibold text-gray-100">Git / DevOps</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="py-20 px-6 bg-gray-900 rounded-3xl shadow-2xl my-16 mx-auto container">
        <div class="text-center">
            <h2 class="text-4xl font-bold gradient-text-orange mb-12">Featured Projects</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
                <!-- Project Card 1 -->
                <div class="project-card bg-gray-950 rounded-xl overflow-hidden shadow-xl border border-gray-800">
                    <img src="https://placehold.co/600x400/22272E/fb923c?text=Project+Atlas" alt="Project Atlas Thumbnail" class="w-full h-56 object-cover">
                    <div class="p-6">
                        <h3 class="text-2xl font-semibold text-white mb-2">Project Atlas (SaaS)</h3>
                        <p class="text-gray-400 mb-4 text-base">A scalable SaaS platform built with [Tech Stack], featuring real-time data processing and a robust API.</p>
                        <a href="#" class="inline-flex items-center text-orange-400 hover:text-orange-300 font-medium transition-colors duration-200">
                            View Case Study
                            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                        </a>
                    </div>
                </div>
                <!-- Project Card 2 -->
                <div class="project-card bg-gray-950 rounded-xl overflow-hidden shadow-xl border border-gray-800">
                    <img src="https://placehold.co/600x400/22272E/fb923c?text=Dev+Blog" alt="Dev Blog Thumbnail" class="w-full h-56 object-cover">
                    <div class="p-6">
                        <h3 class="text-2xl font-semibold text-white mb-2">Personal Dev Blog</h3>
                        <p class="text-gray-400 mb-4 text-base">A content-focused blog built with [Tech Stack], emphasizing performance, SEO, and clean typography.</p>
                        <a href="#" class="inline-flex items-center text-orange-400 hover:text-orange-300 font-medium transition-colors duration-200">
                            View Blog
                            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                        </a>
                    </div>
                </div>
                <!-- Project Card 3 -->
                <div class="project-card bg-gray-950 rounded-xl overflow-hidden shadow-xl border border-gray-800">
                    <img src="https://placehold.co/600x400/22272E/fb923c?text=E-commerce+API" alt="E-commerce API Thumbnail" class="w-full h-56 object-cover">
                    <div class="p-6">
                        <h3 class="text-2xl font-semibold text-white mb-2">E-commerce Backend API</h3>
                        <p class="text-gray-400 mb-4 text-base">A headless e-commerce API service developed with [Tech Stack], supporting product management and order processing.</p>
                        <a href="#" class="inline-flex items-center text-orange-400 hover:text-orange-300 font-medium transition-colors duration-200">
                            View Docs
                            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                        </a>
                    </div>
                </div>
                <!-- Add more project cards as needed -->
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-20 px-6 bg-gray-900 rounded-3xl shadow-2xl my-16 mx-auto container">
        <div class="text-center">
            <h2 class="text-4xl font-bold gradient-text-orange mb-8">Get In Touch</h2>
            <p class="text-lg md:text-xl text-gray-300 max-w-3xl mx-auto mb-8">
                I'm always open to new opportunities and collaborations. Feel free to reach out!
            </p>
            <div class="flex flex-col items-center space-y-6">
                <a href="mailto:your.email@example.com" class="text-orange-400 hover:text-orange-300 text-2xl font-medium flex items-center space-x-3 transition-colors duration-200">
                    <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20"><path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path><path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path></svg>
                    <span>your.email@example.com</span>
                </a>
                <div class="flex space-x-8 text-gray-400">
                    <!-- LinkedIn Icon (Placeholder SVG) -->
                    <a href="https://linkedin.com/in/yourprofile" target="_blank" class="hover:text-orange-400 transition-colors duration-200">
                        <svg class="w-9 h-9" fill="currentColor" viewBox="0 0 24 24"><path d="M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 006-6zM2 9h4v12H2zM4 6a2 2 0 100-4 2 2 0 000 4z"></path></svg>
                    </a>
                    <!-- GitHub Icon (Placeholder SVG) -->
                    <a href="https://github.com/yourusername" target="_blank" class="hover:text-orange-400 transition-colors duration-200">
                        <svg class="w-9 h-9" fill="currentColor" viewBox="0 0 24 24"><path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.47.087.67-.23.67-.483 0-.237-.008-.86-.013-1.688-2.782.603-3.369-1.34-3.369-1.34-.454-1.157-1.11-1.464-1.11-1.464-.908-.62.069-.607.069-.607 1.004.07 1.532 1.03 1.532 1.03.89 1.528 2.336 1.088 2.906.83.09-.645.35-1.088.636-1.338-2.22-.253-4.555-1.115-4.555-4.945 0-1.09.39-1.984 1.03-2.68a3.57 3.57 0 01.1-2.652s.836-.268 2.747 1.026c.79-.22 1.63-.33 2.47-.33.84 0 1.68.11 2.47.33 1.91-1.294 2.747-1.026 2.747-1.026.182.556.326 1.134.1 2.652.64.696 1.03 1.59 1.03 2.68 0 3.84-2.339 4.686-4.568 4.935.35.3.67.92.67 1.855 0 1.34-.012 2.427-.012 2.75 0 .25.197.575.676.474C20.137 20.217 23 16.46 23 12.017 23 6.484 18.522 2 12 2z" clip-rule="evenodd"></path></svg>
                    </a>
                    <!-- Twitter/X Icon (Placeholder SVG) -->
                    <a href="https://twitter.com/yourusername" target="_blank" class="hover:text-orange-400 transition-colors duration-200">
                        <svg class="w-9 h-9" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.228-6.914L4.99 21.75H1.68l7.73-8.82L1.8 2.25H8.51l4.596 6.086L18.244 2.25zm-1.53 17.51l-1.32-.992-5.414-7.17L5.27 4.2h1.766l4.037 5.344 5.232 6.914 1.32.992 4.037 5.344h-1.766l-4.037-5.344z"></path></svg>
                    </a>
                </div>
            </div>
        </div>
    </section>
</Layout>
