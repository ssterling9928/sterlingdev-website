---

// src/components/Header.astro
//
// This component renders the main header section of your portfolio website.
// It is designed to include a logo image, a site title, and navigation links.
// The layout is flexible, ensuring the logo is on the far left, the title
// follows, and the navigation is pushed to the far right.
//
// Props:
//   siteTitle: string   - The main title 
//   logoSrc: string     - The path to logo image file, typically imported from src/assets.
//   logoAlt: string     - The alternative text for logo image, important for accessibility.

// Import the LogoImg component 
import LogoImg from './LogoImg.astro';

// Import the image file directly from `src/assets`. Astro will process this.

import siteLogo from '../assets/images/sterlingdevlogo.png'; 

const { pathname } = Astro.url;
const activeClass = "text-orange-500";

interface Props {
  siteTitle: string;
  logoAlt: string; // The alt text for the logo will be passed down to LogoImg.
}

// Destructure props received by this component.
const { siteTitle, logoAlt } = Astro.props;
---
     <!-- py-6 px-4  -->
<!-- Header Container: -->
<!-- `py-5 px-6 md:px-16`: Responsive vertical and horizontal padding. -->
<!-- `bg-gray-900 bg-opacity-70 backdrop-blur-md`: Dark, slightly transparent background with blur effect. -->
<!-- `sticky top-0 z-50`: Makes the header stick to the top when scrolling, ensuring it's always on top. -->
<!-- `rounded-b-xl`: Rounded corners at the bottom. -->
<header id="header" class="bg-[#1C1C1C] shadow-md shadow-orange-500 rounded-b-xl backdrop-blur-md bg-gray-900 bg-opacity-70 sm:sticky top-0 z-50">
  <!-- Navigation Content Wrapper: -->
  <!-- `container mx-auto`: Centers the content and applies max-width constraints. -->
  <!-- `flex items-center`: Makes it a flex container, aligning items vertically in the center. -->
  
    
    <div class="container mx-auto py-4 flex flex-wrap items-center justify-around gap-y-6 lg:flex-nowrap lg:justify-between">

      <div class="flex items-center justify-around w-full lg:w-auto lg:justify-self-start lg:ml-16">
        <!-- Logo Image Component: -->
        <!-- `logoSrc={siteLogo.src}`: Pass the processed source of the imported image. -->
        <!-- `logoAlt={logoAlt}`: Pass the alt text prop. -->
        <!-- `className="w-12 h-12"`: Example Tailwind classes for the logo's size. Adjust as needed. -->
        <LogoImg src={siteLogo.src} alt={logoAlt} className="max-w-20 overflow-hidden outline rounded-full lg:mr-24" />
        <!-- Site Title: -->
        <!-- `text-2xl font-semibold text-white`: Styles for the title text. -->
        <!-- `mr-auto`: This is the key! It consumes all available margin space to its right, -->
        <!--            effectively pushing the navigation links (the next sibling) to the far right. -->
        <h1 class="text-3xl font-heading text-white">
          {siteTitle}
        </h1>
      </div>

      <!-- Navigation Links: -->
      <!-- `space-x-8`: Adds horizontal spacing between the navigation links. -->
      <nav class="flex items-center justify-around w-full lg:w-auto lg:justify-end lg:mr-4 space-x-6">
        <a href="/about/" class:list={["text-sm sm:text-md md:text-lg nav-link", {[activeClass]: pathname === "/about/"} ]}>About Me</a>
        <a href="/skills/" class:list={["text-sm sm:text-md md:text-lg nav-link", {[activeClass]: pathname === "/skills/"} ]}>My Skills</a>
        <a href="/myWork/" class:list={["text-sm sm:text-md md:text-lg nav-link", {[activeClass]: pathname === "/myWork/"} ]}>My Work</a>
        <!-- Todo: Turn this contact link into a button that will open a contact form. -->
        <a href="#contact" class="text-sm sm:text-md md:text-lg nav-link">Contact Me</a>
      </nav>
        
    </div>
</header>
<script>

  document.addEventListener("DOMContentLoaded", function() {
    const navLinks = document.querySelectorAll(".nav-link");
    navLinks.forEach(link => {
      link.addEventListener("click", function() {
        navLinks.forEach(other => {
          other.classList.remove("active");
        })
        link.classList.add("active");
      });
    });
  });

</script>
